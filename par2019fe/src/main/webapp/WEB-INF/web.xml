<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UsuarioServlet</servlet-name>
        <servlet-class>controller.servlet.UsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductoServlet</servlet-name>
        <servlet-class>controller.servlet.ProductoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarritoServlet</servlet-name>
        <servlet-class>controller.servlet.CarritoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/UsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ClienteServlet</servlet-name>
        <servlet-class>controller.servlet.ClienteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductoServlet</servlet-name>
        <url-pattern>/productos</url-pattern>
        <url-pattern>/productos/listar-productos</url-pattern>
        <url-pattern>/productos/productos</url-pattern>
        <url-pattern>/productos/login</url-pattern>
        <url-pattern>/productos/registrar</url-pattern>
        <url-pattern>/productos/admin</url-pattern>
        <url-pattern>/productos/admin/agregar</url-pattern>
        <url-pattern>/productos/admin/busqueda</url-pattern>
        <url-pattern>/productos/admin/cargar</url-pattern>
        <url-pattern>/productos/admin/modificar</url-pattern>
        <url-pattern>/productos/admin/cancelar</url-pattern>
        <url-pattern>/productos/admin/eliminar</url-pattern>
        <url-pattern>/productos/admin/admin/eliminar</url-pattern>
        <url-pattern>/productos/admin/admin/busqueda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClienteServlet</servlet-name>
        <url-pattern>/clientes</url-pattern>
        <url-pattern>/clientes/login</url-pattern>
        <url-pattern>/clientes/registrar</url-pattern>
        <url-pattern>/clientes/registrar/agregar</url-pattern>
        <url-pattern>/clientes/registrar/ingresar</url-pattern>
        <url-pattern>/clientes/ingresar</url-pattern>
        <url-pattern>/clientes/cancelar</url-pattern>
        <url-pattern>/login</url-pattern>
        <url-pattern>/registrar</url-pattern>
        <url-pattern>/cancelar</url-pattern>
        <url-pattern>/home</url-pattern>
        <url-pattern>/productos/home</url-pattern>
        <url-pattern>/productos/admin/home</url-pattern>
        <url-pattern>/productos/admin/admin/home</url-pattern>
        <url-pattern>/clientes/admin</url-pattern>
        <url-pattern>/clientes/admin/modificar</url-pattern>
        <url-pattern>/clientes/admin/eliminar</url-pattern>
        <url-pattern>/clientes/admin/admin/eliminar</url-pattern>
        <url-pattern>/clientes/admin/cancelar</url-pattern>
        <url-pattern>/clientes/admin/cargar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductoServlet</servlet-name>
        <url-pattern>/ProductoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarritoServlet</servlet-name>
        <url-pattern>/carrito</url-pattern>
        <url-pattern>/carrito/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>jsp/home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
